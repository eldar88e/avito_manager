<%= button_to 'Очистить бан лист', store_update_all_path(@store.id), class: 'btn btn-danger mb-3', method: :patch,
              data: { confirm: t('confirm.ad'), controller: 'confirm', action: 'click->confirm#call' } %>
<%= render partial: '/ads/search' %>
<% if @ads.present? %>
  <ul class="list-group" data-controller="fancybox" class="ads">
    <li class="list-group-item list-group-item-action active d-none d-md-block">
      <div class="flex flex-wrap sort_ads">
        <div class="w-1/12"><%= sort_link(@q_ads, :id, 'Файл ИД', data: { turbo_prefetch: false }) %></div>
        <div class="w-1/12"><%= sort_link(@q_ads, :avito_id, 'Авито ИД', data: { turbo_prefetch: false }) %></div>
        <div class="w-1/12">Img</div>
        <div class="w-4/12"><%= sort_link(@q_ads, :file_id, 'External ID', data: { turbo_prefetch: false }) %></div>
        <div class="w-1/12"><%= sort_link(@q_ads, :deleted, 'Удалено', data: { turbo_prefetch: false }) %></div>
        <div class="w-1/12"><%= sort_link(@q_ads, :baned, 'Бан', data: { turbo_prefetch: false }) %></div>
        <div class="w-2/12"><%= sort_link(@q_ads, :baned_until, 'Заблокировано до', data: { turbo_prefetch: false }) %></div>
        <div class="w-1/12"></div>
      </div>
    </li>
    <%= render @ads %>
  </ul>

  <div data-controller="pagy-initializer" class="mt-3 mb-3">
    <%== pagy_nav(@pagy, data: { turbo_prefetch: false }) if @pagy.pages > 1 %>
  </div>

  <%== pagy_info(@pagy) %>
<% else %>
  <p>Записей не найдено!</p>
<% end %>
