<%= content_tag(:li, class: 'mb-2', id: dom_id(ad),
                title: "created_at: #{format_date ad.created_at}, updated_at: #{format_date ad.updated_at}") do %>
  <div class="flex flex-wrap">
    <div class="w-4/12 md:w-1/12"><%= ad.id %></div>
    <div class="w-4/12 md:w-1/12"><%= ad.avito_id %></div>
    <div class="w-4/12 md:w-1/12 flex gap-1 overflow-x-auto">
      <% if ad.images.attached? %>
        <%= ad.images.size %>
        <% ad.images.limit(3).each do |image| %>
          <a data-fancybox="gallery_ad" data-src="<%= storage_path(image) %>" data-caption="<%= ad.file_id %>">
            <div class="loading-image" style='width: 50px; height: 37px'>
              <div class="image-thumbnail"
                   style="background-image: url(<%= img_resize(image, width: 80, height: 57) %>);"></div>
            </div>
          </a>
        <% end %>
      <% end %>
    </div>
    <div class="w-4/12" style="font-size: 0.8rem">
      <%= ad.file_id %><br>
      <span class="mt-1"><%= ad.full_address %></span>
    </div>
    <div class="w-1/12">
      <% if ad.deleted? %>
        1
      <% else %>
        0
      <% end %>
    </div>
    <div class="w-1/12">
      <% if ad.banned? %>
        1
      <% else %>
        0
      <% end %>
    </div>
    <div class="w-2/12 text-end"><%= format_date ad.banned_until %></div>
    <div class="w-1/12">
      <%= link_to edit_store_ad_path(ad, store_id: @store), class: 'btn inline-flex', title: 'Править',
                  data: { bs_toggle: 'modal', bs_target: '#mainModal' } do %>
        <%= render IconComponent.new name: :edit, width: 20 %>
      <% end %>
    </div>
  </div>
<% end %>
